    "[python]": {
        "editor.defaultFormatter": "mikoz.black-py",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
    },
    "editor.formatOnSave": true,
    "python.defaultInterpreterPath": "C:\\ProgramData\\Anaconda3\\python.exe",
